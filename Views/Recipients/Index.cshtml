@model IEnumerable<BloodBank.Models.Recipient>

@{
    ViewData["Title"] = "Recipient List";
}

<div class="container py-4">
    <h1 class="display-4 mb-4 text-center">@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col text-right">
            <a class="btn btn-success" asp-action="Create">Add New Recipient</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th style="width: 15%;" scope="col">Recipient Name</th>
                    <th style="width: 10%;" scope="col">Age</th>
                    <th style="width: 10%;" scope="col">Blood Type</th>
                    <th style="width: 15%;" scope="col">Contact</th>                 
                    <th style="width: 20%;" scope="col">Medical Condition</th>
                    <th style="width: 15%;" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RecipientName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                        <td>@Html.DisplayFor(modelItem => item.BloodType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contact)</td>                      
                        <td>@Html.DisplayFor(modelItem => item.MedicalCondition)</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.RecipientId">Details</a>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.RecipientId">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RecipientId"
                                   onclick="return confirm('Are you sure you want to delete this recipient?')">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
